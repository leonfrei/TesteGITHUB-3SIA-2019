public class boliche {
	String corBola;
	double raio;
	double maiorBola = 0;

public boliche(String corbola, double tamanho){
	this.corBola = corbola;
	this.raio = tamanho;
}

	public boliche maiorBola(boliche bola2, boliche bola3) {
		//essa é a bola 1 
		boliche maior = this;
		if(bola2.raio > this.raio && bola2.raio > bola3.raio){
			maior = bola2;
		}else {
			if(this.raio > bola2.raio && this.raio > bola3.raio) {
				maior = this;
			}else {
				maior = bola3;
			}
		}
		
		return maior;
		
	
	}


public String retornarDados(String maior){
	String aux = "";
	
	aux = maior;
	
	return aux;                                    
}








}
